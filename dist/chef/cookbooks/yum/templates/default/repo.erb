# Generated by Chef for <%= node[:fqdn] %>
# Local modifications will be overwritten.
[<%= @repo_name %>]
name=<%= @description %>
<% if @type %>
type=<%= @type %>
<% end %>
<% if @mirrorlist %>
mirrorlist=<%= @url %>
<% else %>
baseurl=<%= @url %>
<% end %>
<% if @key %>
gpgcheck=1
gpgkey=file:///etc/pki/rpm-gpg/<%= @key %>
<% else %>
gpgcheck=0
<% end %>
enabled=<%= @enabled %>
<% if @failovermethod %>
failovermethod=<%= @failovermethod %>
<% end %>
<% if @bootstrapurl %>
bootstrapurl=<%= @bootstrapurl %>
<% end %>
